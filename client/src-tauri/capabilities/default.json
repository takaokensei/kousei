{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "xelatex",
          "cmd": "xelatex",
          "args": true,
          "sidecar": false
        }
      ]
    },
    "fs:default"
  ]
}